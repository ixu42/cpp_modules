# Program name
NAME := a.out
DEBUG_NAME := debug_$(NAME)

# Directory for object files
OBJS_DIR := objs/

# Source files
SRCS = $(addsuffix .cpp, main AMateria Ice Cure Character MateriaSource)

# Object files derived from sources
OBJS = $(addprefix $(OBJS_DIR), $(SRCS:.cpp=.o))

# Compiler and flags
COMPILER := c++
DEFAULT_FLAGS := -Wall -Wextra -Werror -std=c++11
FLAGS := -Wall -Wextra -Werror -std=c++11
DEBUG_FLAGS := -DDEBUG_MODE

FLAG_TEMP = inital

# Color scheme for terminal output
BRIGHT_YELLOW := \033[0;93m
YELLOW := \033[0;33m
COLOR_RESET := \033[0m

# Default target
all: FLAGS := $(DEFAULT_FLAGS)
all: $(NAME)

$(NAME): $(OBJS_DIR) $(OBJS)
	@echo "FLAGS: $(FLAGS)"
	@$(COMPILER) -o $(NAME) $(OBJS)
	@echo "$(BRIGHT_YELLOW)Built $(NAME)$(COLOR_RESET)"

# Debug target
debug: FLAGS := $(filter-out $(DEBUG_FLAGS), $(FLAGS))
debug: FLAGS += $(DEBUG_FLAGS)
debug: .debug
.debug: $(OBJS_DIR) $(OBJS)
	@echo "FLAGS: $(FLAGS)"
	$(COMPILER) -o $(DEBUG_NAME) $(OBJS)
	@echo "$(BRIGHT_YELLOW)Built $(DEBUG_NAME)$(COLOR_RESET)"
	@touch .debug

$(OBJS_DIR):
	@mkdir -p $(OBJS_DIR)
	@echo "$(YELLOW)Built object directory$(COLOR_RESET)"

$(OBJS_DIR)%.o: %.cpp
	$(COMPILER) $(FLAGS) -c $< -o $@
	@echo "$(YELLOW)Built $@$(COLOR_RESET)"

clean:
	@rm -fr $(OBJS_DIR) .debug
	@echo "$(YELLOW)Removed object files$(COLOR_RESET)"

fclean: clean
	@rm -f $(NAME) $(DEBUG_NAME)
	@echo "$(YELLOW)Removed executable(s)$(COLOR_RESET)"

re: fclean all
